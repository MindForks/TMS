@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.DeletePersonalData;
    Layout = "/Views/Shared/_LayoutPages.cshtml";
}



<div class="container-fluid justify-content-center align-items-center h-100 " id="edit-form">
    <center><h4>@ViewData["Title"]</h4></center>
    <div class="row justify-content-center align-items-center h-100">
        <div class="col col-sm-7 col-md-7 col-lg-5 col-xl-4">
            <div class="alert alert-warning" role="alert">
                <p>
                    <span class="glyphicon glyphicon-warning-sign"></span>
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
            </div>

            <div>
                <form id="delete-user" method="post" class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @if (Model.RequirePassword)
                    {
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    }
                    <button class="btn btn-danger btn-block"  type="submit">Delete data and close my account</button>
                </form>
            </div>
        </div>
    </div>
</div>
            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }

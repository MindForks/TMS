@model TMS.EntitiesDTO.TaskDTO
@{
    ViewData["Title"] = "Task details";
    Layout = "/Views/Shared/_LayoutPages.cshtml";

    var users = ((IEnumerable<SelectListItem>)ViewData["Users"]);
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>

<center><h3>Task details</h3></center>
<hr />
<input asp-for="Id" type="hidden" />
<div class="container">
    <div class="col-md-12">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <br />
            <label > @Model.Title</label>
            <br />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <br />
            <textarea class="form-control" rows="5" disabled> @Model.Description</textarea>
            <br />
        </div>
        <div class="row">
            <div class="form-group col-12 col-md-6">
                <label asp-for="StatusId" class="control-label"></label>
                <br />
                <label>@Model.Status.Title</label>
                <br />
            </div>
            <div class="form-group col-12 col-md-6">
                <label asp-for="Weight" class="control-label"></label>
                <br />
                <label>@Model.Weight</label>
                <br />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-12 col-md-6">
                <div class="form-group">
                    <label asp-for="CreationTime" class="control-label"></label>
                    <br />
                    <label>@Model.CreationTime.ToString("dd.MM.yyyy HH:mm")</label>
                    <br />
                </div>
            </div>
            <div class="form-group col-12 col-md-6">
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <br />
                    <label>@Model.EndDate.ToString("dd.MM.yyyy HH:mm")</label>
                    <br />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ModeratorIDs" class="control-label"></label>
            <br />
            <select  asp-for="ModeratorIDs" asp-items="users" disabled data-live-search="true" class="form-control selectpicker"></select>
        </div>
        <div class="form-group ">
            <label asp-for="ViewerIDs" class="control-label"></label>
            <br />
            <select asp-for="ViewerIDs" asp-items="users" disabled data-live-search="true" class="form-control selectpicker"></select>
        </div>

    </div>
        <br />
        <a asp-action="List" class="btn btn-dark">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark">Edit task</a>
    </div>
<script>

    window.addEventListener("load", function () {
        $('#datetimepickerStart').datetimepicker({
            format: 'DD.MM.YYYY HH:mm'
        });
    });
    window.addEventListener("load", function () {
        $('#datetimepickerEnd').datetimepicker({
            format: 'DD.MM.YYYY HH:mm'
        });
    });
</script>



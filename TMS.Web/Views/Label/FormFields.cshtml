@model TMS.EntitiesDTO.LabelDTO


<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input asp-for="Id" type="hidden" />
<input asp-for="UserId" type="hidden" />

<div class="form-group">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" type="text" autocomplete="off" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Color" class="control-label"></label>
    <input asp-for="Color" id="cp1" class="form-control" autocomplete="off" />
    <span asp-validation-for="Color" class="input-group-addon"></span>
</div>
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-info" />
</div>

<script>
    window.addEventListener("load", function () {
        $('#cp1').colorpicker();
    });
</script>


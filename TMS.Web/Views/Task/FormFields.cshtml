@using TMS.EntitiesDTO;
@model TaskDTO
@{
    var users = ((IEnumerable<SelectListItem>)ViewData["Users"]);
    var statuses = ((IEnumerable<SelectListItem>)ViewData["Statuses"]);
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input asp-for="Id" type="hidden" />
<div class="form-group">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" type="text" autocomplete="off" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control" rows="5" autocomplete="off"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Weight" class="control-label"></label>
    <input asp-for="Weight" class="form-control" type="number" min="0" autocomplete="off" />
    <span asp-validation-for="Weight" class="text-danger"></span>
</div>
<div class="row">
    <div class="form-group col-12 col-md-6">
        <div class="form-group">
            <label asp-for="CreationTime" class="control-label"></label>
            <div class="input-group date" id="datetimepickerStart" data-target-input="nearest">
                <input type="text" asp-for="CreationTime" class="form-control datetimepicker-input" data-target="#datetimepickerStart" />
                <div class="input-group-append" data-target="#datetimepickerStart" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
            <span asp-validation-for="CreationTime" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group col-12 col-md-6">
        <div class="form-group">
            <label asp-for="EndDate" class="control-label"></label>
            <div class="input-group date" id="datetimepickerEnd" data-target-input="nearest">
                <input type="text" asp-for="EndDate" class="form-control datetimepicker-input" data-target="#datetimepickerEnd" />
                <div class="input-group-append" data-target="#datetimepickerEnd" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group">
    <label asp-for="StatusId" class="control-label"></label>
    <select asp-for="StatusId" asp-items="@statuses" class="form-control custom-select" type="text" autocomplete="off"></select>
    <span asp-validation-for="StatusId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ModeratorIDs" class="control-label"></label>
    <br />
    <select required multiple asp-for="ModeratorIDs" asp-items="users" data-live-search="true" class="form-control selectpicker"></select>
    <span asp-validation-for="ModeratorIDs" class="text-danger"></span>
</div>
<div class="form-group ">
    <label asp-for="ViewerIDs" class="control-label"></label>
    <br />
    <select required multiple asp-for="ViewerIDs" asp-items="users" data-live-search="true" class="form-control selectpicker"></select>
    <span asp-validation-for="ViewerIDs" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-info" />
</div>

<script>

    window.addEventListener("load", function () {
        $('#datetimepickerStart').datetimepicker({
            format: 'DD.MM.YYYY HH:mm'
        });
    });
    window.addEventListener("load", function () {
        $('#datetimepickerEnd').datetimepicker({
            format: 'DD.MM.YYYY HH:mm'
        });
    });
</script>
